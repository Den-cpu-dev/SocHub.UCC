{
  "name": "SocHub.UCC",
  "version": "1.0.0",
  "description": "Department of Sociology & Anthropology - University of Cape Coast official website",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js --max-warnings=0",
    "lint:fix": "eslint . --ext .js --fix",
    "test:code-quality": "npm run format:check && npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "sociology",
    "anthropology",
    "university",
    "cape-coast",
    "education"
  ],
  "author": "Den-cpu-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Den-cpu-dev/SocHub.UCC.git"
  },
  "homepage": "https://den-cpu-dev.github.io/SocHub.UCC/",
  "devDependencies": {
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
